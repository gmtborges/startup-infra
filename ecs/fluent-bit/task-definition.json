[
  {
    "name": "fluent-bit",
    "image": "fluent/fluent-bit",
    "memory": 128,
    "essential": true,
    "portMappings": [
      {
        "name": "fluent",
        "containerPort": 24224,
        "hostPort": 24224,
        "protocol": "tcp"
      },
      {
        "name": "fluent-udp",
        "containerPort": 5170,
        "hostPort": 5170,
        "protocol": "udp"
      }
    ],
    "volumesFrom": [
      {
        "sourceContainer": "config"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/staging-cluster",
        "awslogs-region": "us-east-2",
        "awslogs-stream-prefix": "ecs"
      }
    }
  },
  {
    "name": "config",
    "image": "322700331992.dkr.ecr.us-east-2.amazonaws.com/fluent-bit-config",
    "memory": 64,
    "essential": true,
    "mountPoints": [
      {
        "sourceVolume": "config",
        "containerPath": "/fluent-bit/etc/"
      }
    ]
  }
]
