[
  {
    "name": "ci",
    "image": "drone/drone:2",
    "memory": 256,
    "portMappings": [
      {
        "name": "ci-server",
        "containerPort": 80,
        "protocol": "tcp"
      }
    ],
    "essential": true,
    "environment": [
      {
        "name": "DRONE_SERVER_PROTO",
        "value": "http"
      },
      {
        "name": "DRONE_SERVER_HOST",
        "value": "ci.internal.domain.com"
      },
      {
        "name": "DRONE_USER_FILTER",
        "value": "Github_Org"
      },
      {
        "name": "DRONE_USER_CREATE",
        "value": "username:gustavomtborges,admin:true"
      },
      {
        "name": "DRONE_GITHUB_CLIENT_ID",
        "value": "3482695d3f9daf50e581"
      }
    ],
    "secrets": [
      {
        "name": "DRONE_GITHUB_CLIENT_SECRET",
        "valueFrom": "arn:aws:ssm:us-east-2:322700331992:parameter/DRONE_GITHUB_CLIENT_SECRET"
      },
      {
        "name": "DRONE_RPC_SECRET",
        "valueFrom": "arn:aws:ssm:us-east-2:322700331992:parameter/DRONE_RPC_SECRET"
      }
    ],
    "mountPoints": [
      {
        "sourceVolume": "ci-server-vol",
        "containerPath": "/data"
      }
    ],
    "dockerLabels": {
      "traefik.enable": "true",
      "traefik.http.routers.ci.entrypoints": "web",
      "traefik.http.routers.ci.rule": "Host(`ci.internal.domain.com`)"
    },
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/staging-cluster",
        "awslogs-region": "us-east-2",
        "awslogs-stream-prefix": "ecs"
      },
      "secretOptions": []
    }
  }
]
